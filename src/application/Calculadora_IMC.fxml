<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="/css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Calculadora_IMCController">
	<!--   -->
<VBox alignment="CENTER">

<Label fx:id="etiqueta" style="-fx-text-alignment:center;" text="introduce tu peso y altura">
         <VBox.margin>
            <Insets bottom="15.0" />
         </VBox.margin></Label>

</VBox>

<HBox alignment="CENTER">
      <Label id="kg" layoutX="397.0" layoutY="20.0" text="peso">
         <HBox.margin>
            <Insets left="20.0" right="20.0" />
         </HBox.margin>
      </Label>
<Slider fx:id="slider" blockIncrement="10" majorTickUnit="25" max="100" min="0" minorTickCount="5" prefHeight="37.0" prefWidth="184.0" showTickLabels="true" showTickMarks="true" value="0">
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin></Slider>
	<TextField fx:id="peso" disable="true" prefHeight="25.0" prefWidth="57.0" style="-fx-background-color: yellow;">
         <HBox.margin>
            <Insets bottom="5.0" left="20.0" right="5.0" />
         </HBox.margin></TextField>
	<Label id="kg" text="Kg.">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin></Label>
      <padding>
         <Insets bottom="30.0" />
      </padding>	
</HBox>
<HBox alignment="CENTER">
<Label id="altura" text="Altura">
         <HBox.margin>
            <Insets left="20.0" />
         </HBox.margin></Label>
<TextField fx:id="altura_dato" editable="true" prefHeight="25.0" prefWidth="65.0">
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin></TextField>	
<Label id="cm" text="en cm.">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin></Label>
<!-- AQUI HAY QUE METER EL METODO QUE MANEJE EL CALCULOonAction="" -->
<Button fx:id="calcular_imc" style="-fx-background-color: blue;" text="calcular IMC" textFill="WHITE">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin></Button>
<TextField fx:id="resultado" disable="true" editable="false" prefHeight="25.0" prefWidth="45.0" />
<Label id="porcentaje" text=" %.">
         <padding>
            <Insets left="10.0" />
         </padding></Label>
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin>
</HBox>

</VBox>
